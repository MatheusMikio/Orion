<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping
	xmlns="urn:nhibernate-mapping-2.2"
	namespace="Orion.Models"
	assembly="Orion">
	
	<class name="DividaModel" lazy="false" table="dividas">
		<id name="Id" column="id" type="long">
			<generator class="sequence">
				<param name="sequence">dividas_seq</param>
			</generator>
		</id>

		<property name="Valor" type="decimal" not-null="true"/>
		<property name="Situacao" not-null="true"/>
		<property name="DataPagamento" column="data_pagamento" type="DateTime" not-null="false"/>
		<property name="Descricao" type="string" length="5000" not-null="true"/>
		
		<many-to-one name="Cliente" column="clienteid" fetch="join" foreign-key="dividas_clienteid_fkey"/>
	</class>

</hibernate-mapping>
